local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Function to create slider UI
local function createSlider(labelText, minValue, maxValue, defaultValue, onChanged)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, -20, 0, 60)
    frame.BackgroundTransparency = 1

    local label = Instance.new("TextLabel", frame)
    label.Text = labelText
    label.Size = UDim2.new(0.5, 0, 0.4, 0)
    label.Position = UDim2.new(0, 0, 0, 0)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.SourceSans
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextSize = 16
    label.TextXAlignment = Enum.TextXAlignment.Left

    local valueBox = Instance.new("TextBox", frame)
    valueBox.Size = UDim2.new(0.5, 0, 0.4, 0)
    valueBox.Position = UDim2.new(0.5, 0, 0, 0)
    valueBox.Text = tostring(defaultValue)
    valueBox.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    valueBox.TextColor3 = Color3.new(1, 1, 1)
    valueBox.Font = Enum.Font.SourceSans
    valueBox.TextSize = 16

    local slider = Instance.new("TextButton", frame)
    slider.Size = UDim2.new(1, 0, 0.4, 0)
    slider.Position = UDim2.new(0, 0, 0.6, 0)
    slider.BackgroundColor3 = Color3.fromRGB(65, 65, 65)
    slider.Text = ""
    local inner = Instance.new("Frame", slider)
    inner.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    inner.Size = UDim2.new((defaultValue - minValue)/(maxValue - minValue), 0, 1, 0)
    inner.Name = "Inner"
    inner.BorderSizePixel = 0

    local corner = Instance.new("UICorner", slider)
    corner.CornerRadius = UDim.new(0, 6)
    local innerCorner = Instance.new("UICorner", inner)
    innerCorner.CornerRadius = UDim.new(0, 6)

    valueBox.FocusLost:Connect(function()
        local num = tonumber(valueBox.Text)
        if num then
            num = math.clamp(num, minValue, maxValue)
            inner.Size = UDim2.new((num - minValue)/(maxValue - minValue), 0, 1, 0)
            onChanged(num)
        end
    end)

    slider.MouseButton1Down:Connect(function()
        local uis = game:GetService("UserInputService")
        local conn
        conn = uis.InputChanged:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseMovement then
                local rel = (input.Position.X - slider.AbsolutePosition.X) / slider.AbsoluteSize.X
                rel = math.clamp(rel, 0, 1)
                inner.Size = UDim2.new(rel, 0, 1, 0)
                local value = math.floor(minValue + (maxValue - minValue) * rel)
                valueBox.Text = tostring(value)
                onChanged(value)
            end
        end)
        uis.InputEnded:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                conn:Disconnect()
            end
        end)
    end)

    return frame
end

-- Function to create toggle
local function createToggle(text, default, callback)
    local toggle = Instance.new("TextButton")
    toggle.Size = UDim2.new(1, -20, 0, 30)
    toggle.BackgroundColor3 = default and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(80, 80, 80)
    toggle.Text = text
    toggle.TextColor3 = Color3.new(1, 1, 1)
    toggle.Font = Enum.Font.SourceSans
    toggle.TextSize = 16
    local corner = Instance.new("UICorner", toggle)
    corner.CornerRadius = UDim.new(0, 6)

    toggle.MouseButton1Click:Connect(function()
        default = not default
        toggle.BackgroundColor3 = default and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(80, 80, 80)
        callback(default)
    end)

    return toggle
end

tabPlayer.MouseButton1Click:Connect(function()
    clearButtons()

    local wsSlider = createSlider("WalkSpeed", 1, 100, 16, function(val)
        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
            LocalPlayer.Character.Humanoid.WalkSpeed = val
        end
    end)
    wsSlider.Parent = Scrolling

    local jpSlider = createSlider("JumpPower", 1, 500, 50, function(val)
        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
            LocalPlayer.Character.Humanoid.JumpPower = val
        end
    end)
    jpSlider.Parent = Scrolling

    local fbToggle = createToggle("Full Bright", false, function(state)
        if state then
            game.Lighting.Ambient = Color3.new(1, 1, 1)
            game.Lighting.Brightness = 5
        else
            game.Lighting.Ambient = Color3.new(0.5, 0.5, 0.5)
            game.Lighting.Brightness = 2
        end
    end)
    fbToggle.Parent = Scrolling

    local noclipToggle = createToggle("Noclip", false, function(state)
        if state then
            noclipConnection = game:GetService("RunService").Stepped:Connect(function()
                if LocalPlayer.Character then
                    for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
                        if v:IsA("BasePart") and v.CanCollide then
                            v.CanCollide = false
                        end
                    end
                end
            end)
        else
            if noclipConnection then
                noclipConnection:Disconnect()
            end
        end
    end)
    noclipToggle.Parent = Scrolling
end)


